<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Transparent" parent="Theme.Example">
        <item name="android:windowIsTranslucent">true</item>
    	<item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="AppTheme" parent="Theme.Transparent">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:actionBarTabBarStyle">@style/MyTabBar</item>-->
        <!--<item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>-->
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>

        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="actionBarTabBarStyle">@style/MyTabBar</item>-->
        <!--<item name="actionBarTabStyle">@style/MyActionBarTabs</item>-->
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/actionbar_text</item>

        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>


    </style>

    <style name="DialogStyleLight.Custom">
        <!-- anything can be left out: -->
        <item name="titleTextColor">@color/default_color</item>
        <item name="titleSeparatorColor">@color/default_color_darker</item>
        <item name="messageTextColor">@color/primary_text</item>
        <item name="buttonTextColor">@color/primary_text</item>
        <item name="buttonSeparatorColor">#668f8f8f</item>
        <item name="buttonBackgroundColorNormal">@color/primary_bright</item>
        <item name="buttonBackgroundColorPressed">#668f8f8f</item>
        <item name="buttonBackgroundColorFocused">#998f8f8f</item>
        <!--<item name="dialogBackground">@drawable/dialog_background</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyTabBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- tab indicator -->
        <item name="android:background">@color/actionbar_background</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>



    <style name="GroupImageText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
    <style name="GroupItemText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
    <style name="LegendHeader" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    
    <style name="ChartExpensesText" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColor">#DEDEDE</item>-->
        <item name="android:textColor">@color/expenses</item>
    </style>
    <style name="ChartExpensesTextSelected" parent="ChartExpensesText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChartIncomeText" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColor">#DEDEDE</item>-->
        <item name="android:textColor">@color/income</item>
    </style>
    <style name="ChartIncomeTextSelected" parent="ChartIncomeText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChartInfoText" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColor">#DEDEDE</item>-->
        <item name="android:textColor">@color/primary_text</item>
    </style>
    
    <style name="HistoryIncomeText" parent="AppTheme">
        <item name="android:textColor">@color/income</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="HistoryExpensesText" parent="AppTheme">
        <item name="android:textColor">@color/expenses</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="HistoryItemTitle" >
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ListHintStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>
    
    <style name="CalculationText" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextSelected" parent="ItemText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextNormal" parent="ItemText">
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ButtonFlat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/btn_flat</item>
    </style>

    <style name="ItemText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

</resources>